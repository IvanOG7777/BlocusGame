{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "C++ Build",
        "type": "shell",
        "command": "C:\\msys64\\mingw64\\bin\\g++.exe",
        "args": [
          "-std=c++17",
          "-g",
          "-I${workspaceFolder}/include",
          "-L${workspaceFolder}/lib",
          "${file}",
          "-o",
          "${fileDirname}/${fileBasenameNoExtension}.exe"
        ],
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "problemMatcher": ["$gcc"],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }
    ]
  }
  